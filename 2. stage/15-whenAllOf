pipeline {
    agent any

    environment{
        Version= "1.0.0"
        // Do not use Env Keyword as it is pre-defined to something in Jenkins.
        // envi= "Dev" 
        envi= "Prod"
    }

    stages {
        stage('Build') {
            when {
                allOf {
                    environment name: "Version", value: "1.0.0"
                    environment name: "envi", value: "Dev"
                }
            }
            steps {
                echo "Building version: $Version in $envi  Environment."
            }
        }
    }
}